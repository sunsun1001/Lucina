<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/home"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:id="@+id/lucina_title"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:paddingTop="15dp"
            android:background="@color/darkBlue"
            android:src="@drawable/logo_white"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@color/lightText"
            />

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="-36dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/settings_icon"
            />

    </LinearLayout>
   
    <FrameLayout
        android:id="@+id/crib_monitor"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <FrameLayout
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_rectangle_gray" >
            <FrameLayout
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:background="@drawable/rounded_rectangle_white" >
                <TextView
                    android:paddingLeft="112dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crib Monitor"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/darkBlueText"
                    />
                <TextView
                    android:id="@+id/crib_text"
                    android:paddingLeft="123dp"
                    android:paddingRight="11dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Monitor sleep and listen for crying"
                    android:textSize="14sp"
                    android:textColor="@color/blueText"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:paddingBottom="6dp"
            android:background="@drawable/rounded_rectangle_gray_more"
            android:layout_gravity="left">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_teal">
            </FrameLayout>

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="74dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/crib" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/nursery_monitor"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <FrameLayout
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_rectangle_gray" >
            <FrameLayout
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:background="@drawable/rounded_rectangle_white" >
                <TextView
                    android:paddingLeft="112dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nursery Monitor"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/darkBlueText"
                    />
                <TextView
                    android:id="@+id/nursery_text"
                    android:paddingLeft="123dp"
                    android:paddingRight="11dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Listen for crying while x is awake."
                    android:textSize="14sp"
                    android:textColor="@color/blueText"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:paddingBottom="6dp"
            android:background="@drawable/rounded_rectangle_gray_more"
            android:layout_gravity="left">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_teal">
            </FrameLayout>

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="74dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/sun" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/explore_data"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <FrameLayout
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_rectangle_gray" >
            <FrameLayout
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:background="@drawable/rounded_rectangle_white" >
                <TextView
                    android:paddingLeft="112dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Data"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/darkBlueText"
                    />
                <TextView
                    android:id="@+id/data_text"
                    android:paddingLeft="123dp"
                    android:paddingRight="11dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="View trends in x's sleeping pattern."
                    android:textSize="14sp"
                    android:textColor="@color/blueText"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:paddingBottom="6dp"
            android:background="@drawable/rounded_rectangle_gray_more"
            android:layout_gravity="left">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rectangle_teal">
            </FrameLayout>

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="74dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/graph" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>